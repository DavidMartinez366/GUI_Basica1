<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_5.ConfiguracionPage"
             Title="Configuración">

    <AbsoluteLayout>
        <Label Text="Configuración" FontSize="Large"
               AbsoluteLayout.LayoutBounds="0.5,0.1,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               TextColor="Purple"/>

        <Switch AbsoluteLayout.LayoutBounds="0.3,0.3,-1,-1"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Label Text="Activar Notificaciones"
               AbsoluteLayout.LayoutBounds="0.7,0.3,-1,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="Cambiar Tema"
                AbsoluteLayout.LayoutBounds="0.5,0.5,150,40"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="Purple"
                TextColor="White"/>
    </AbsoluteLayout>
</ContentPage>