<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_5.CrearContactoPage"
             Title="Nuevo Contacto">

    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Start" Padding="20">
        <Entry Placeholder="Nombre" WidthRequest="300" Margin="0,0,0,10"/>
        <Entry Placeholder="Teléfono" WidthRequest="300" Margin="0,0,0,10" Keyboard="Telephone"/>
        <Entry Placeholder="Correo" WidthRequest="300" Margin="0,0,0,10" Keyboard="Email"/>
        <Entry Placeholder="Dirección" WidthRequest="300" Margin="0,0,0,20"/>

        <Button Text="Guardar Contacto" 
                WidthRequest="200"
                BackgroundColor="Purple"
                TextColor="White"/>
    </FlexLayout>
</ContentPage>